<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/card_bg_layer">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_red"/>
        </shape>
    </item>

    <item
        android:width="150dp"
        android:height="150dp"
        android:left="-50dp"
        android:top="-50dp">
        <shape android:shape="oval">
            <stroke
                android:width="24dp"
                android:color="#1AFFFFFF" />
        </shape>
    </item>

    <item
        android:width="100dp"
        android:height="100dp"
        android:left="40dp"
        android:top="50dp">
        <shape android:shape="oval">
            <stroke
                android:width="15dp"
                android:color="#0DFFFFFF" />
        </shape>
    </item>

    <item
        android:width="250dp"
        android:height="250dp"
        android:bottom="-120dp"
        android:right="-80dp"
        android:gravity="bottom|right">
        <shape android:shape="oval">
            <solid android:color="#0DFFFFFF" />
        </shape>
    </item>

</layer-list>